
@{
    ViewBag.Title = "detayliarama";
    Layout = "~/Views/Shared/default_layout.cshtml";
}

<div id="sp-breadcrumb-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12" id="sp-breadcrumb">
                <div class="sp-column ">
                    <div class="sp-module ">
                        <div class="sp-module-content">
                            <ul class="breadcrumb">
                                <li style="font-size:20px;color:#fff5fd;background-color:#e1701a;">
                                    <span>DETAYLI ÜRÜN ARAYINIZ</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<form action="@Url.Action("dproducts","Home")" method="post">
    <div class="shop-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-sm-3 col-md-3 col-lg-3"></div>

                <div class="col-sm-3 col-md-6 col-lg-6">
                    <div class="shop-by">
                        <h3>LÜTFEN SEÇİM YAPINIZ</h3>
                    </div>
                    <div class="all-shop-cat">
                        <div class="single-shop-cat">
                            @{
                                List<SelectListItem> klist = new List<SelectListItem>();

                                foreach (var item in ViewBag.kategoriListesi)
                                {
                                    SelectListItem sli = new SelectListItem();
                                    sli.Text = item.categoryname;
                                    sli.Value = item.categoryID.ToString();
                                    klist.Add(sli);
                                }
                            }
                            <h3 style="background-color:#F3C583;">Kategori Seçiniz @Html.DropDownList("kategoriler", new SelectList(klist, "Value", "Text"))</h3>

                            <br /><br /><br />

                            <h3 class="manufacturers" style="background-color:#FFC947;">Marka Seçiniz</h3>
                            <ul>
                                @foreach (var item in ViewBag.markaListesi)
                                {
                                    <li>
                                        <div>
                                            <input type="checkbox" name="markalar" value="@item.supplierID" />&nbsp;&nbsp; @item.brandname
                                        </div>
                                    </li>
                                }
                            </ul>

                            <br /><br /><br />

                                        <div style="background-color:#FFC947;">
                                            @Html.RadioButton("stoktavarmi", "0", new { Value = "0", @checked = true })
                                            @Html.Label("Stokta Olanlar")

                                            @Html.RadioButton("stoktavarmi", "1", new { Value = "1", @checked = false })
                                            @Html.Label("Hepsi")
                                        </div>

                            <br /><br /><br />


                            <h3 class="manufacturers" style="background-color:#f47e1e;">Fiyat Seçiniz</h3>
                            <div class="price_filter">
                                <div id="slider-range"></div>
                                <div class="price_slider_amount">
                                    <p><input type="text" id="amount" name="amount" placeholder="Fiyat aralığı seçiniz" /></p>
                                    <input type="submit" value="ARAYINIZ" />
                                </div>
                            </div>
                        </div>
                        @*<div class="add-r-sidebar">
                            <p class="banner-block"><a href="single-product.html#"><img alt="" src="img/all-adds/3.jpg"></a></p>
                        </div>*@



                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

