@model iakademi8_proje.Models.AnaSayfaModel

@{
    ViewBag.Title = "detaylar";
    Layout = "~/Views/Shared/default_layout.cshtml";
}


<div id="sp-breadcrumb-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12" id="sp-breadcrumb">
                <div class="sp-column ">
                    <div class="sp-module ">
                        <div class="sp-module-content">
                            <ul class="breadcrumb">
                                <li style="font-size:20px;color:#fff5fd;background-color:#e1701a;">
                                    <span>ÜRÜN DETAYLARI</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="shop-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-12 col-lg-12">
                <div class="back-to-category">
                    Kategorisi
                    <a title="Destop &amp; Laptop" class="product-details" href="single-product.html#">@Model.detayliUrun.categoryname</a>
                </div>
                <div class="clear"></div>
                <div class="row">
                    <div class="col-sm-12 col-md-5 col-lg-5">
                        <div class="product-view">
                            <div class="full-product-img">
                                <div class="tab-content">
                                    <div id="home" class="tab-pane fade in active">
                                        <img class="zoom_01" src='~/Content/urunresimleri/@Model.detayliUrun.photopath' data-zoom-image="~/Content/urunresimleri/@Model.detayliUrun.photopath" alt="" />
                                    </div>

                                    <div id="menu1" class="tab-pane fade">
                                        <img class="zoom_01" src='~/Content/urunresimleri/@Model.detayliUrun.photopath' data-zoom-image="/Content/img/single-products/2.jpg" alt="" />
                                    </div>
                                    <div id="menu2" class="tab-pane fade">
                                        <img class="zoom_01" src='~/Content/urunresimleri/@Model.detayliUrun.photopath' data-zoom-image="/Content/img/single-products/3.jpg" alt="" />
                                    </div>
                                    <div id="menu3" class="tab-pane fade">
                                        <img class="zoom_01" src='~/Content/urunresimleri/@Model.detayliUrun.photopath' data-zoom-image="/Content/img/single-products/4.jpg" alt="" />
                                    </div>
                                </div>
                            </div>
                            <div class="small-products">
                                <ul class="nav nav-tabs">
                                    <li class="active">
                                        <a data-toggle="tab" href="single-product.html#home">
                                            <img src="~/Content/urunresimleri/@Model.detayliUrun.photopath" alt="">
                                        </a>
                                    </li>
                                    <li>
                                        <a data-toggle="tab" href="single-product.html#menu1">
                                            <img src="~/Content/urunresimleri/@Model.detayliUrun.photopath" alt="">
                                        </a>
                                    </li>
                                    <li>
                                        <a data-toggle="tab" href="single-product.html#menu2">
                                            <img src="~/Content/urunresimleri/@Model.detayliUrun.photopath" alt="">
                                        </a>
                                    </li>
                                    <li>
                                        <a data-toggle="tab" href="single-product.html#menu3">
                                            <img src="~/Content/urunresimleri/@Model.detayliUrun.photopath" alt="">
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-7 col-lg-7">
                        <div class="single-product-info sp-info-area">
                            <div class="product-name"><h1>@Model.detayliUrun.productname</h1></div>
                            @*<div class="product-rating">
                                <div title="Rating: 3/5" class="ratingbox">
                                    <div class="stars-orange" style="width:45px"></div>
                                </div>
                                <span class="amount"> 1 Review(s) </span>
                                <p class="in-stock">
                                    Availability:<span>In Stock</span>
                                </p>
                            </div>*@
                        <div class="all-prices">
                            @*<span class="sp-price price-lessprice">@Model.detayliUrun.price TL</span>*@
                            <span class="sp-price main-price">@Model.detayliUrun.price TL</span>
                        </div>
                           
                            <div class="product-short-description">

                            </div>
                            
                            <div class="product-quantity">
                                <div class="submit_crt" >
                                    <a href="@Url.Action("Sepet/" + @Model.detayliUrun.productID,"Home")">
                                    <input type="submit" value="Sepete Ekle" style="background-color:orange;color:white;font-size:30px;">
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clear"></div>
                    <div class="col-sm-12 col-md-12 col-lg-12">
                        <div class="reviews-areas">
                            <div class="reviw-title">
                                <ul class="nav nav-tabs">
                                    <li class="active"><a data-toggle="tab" href="single-product.html#description">AÇIKLAMA</a></li>
                                    <li><a data-toggle="tab" href="single-product.html#review">DİGER BİLGİLER</a></li>
                                </ul>
                            </div>
                            <div class="revew-content-area">
                                <div class="tab-content">
                                    <div id="description" class="tab-pane fade in active">
                                        <p>@Model.detayliUrun.notes</p>
                                    </div>
                                    <div id="review" class="tab-pane fade">
                                        <div class="customer-reviews">
                                            <h3 class="author">Stok Adedi : @Model.detayliUrun.stock</h3>
                                            <div class="list-reviews">
                                                <div class="review-item normal">
                                                    <b class="author">İndirim : @Model.detayliUrun.discount</b> <br />
                                                    <p class="author">Marka : @Model.detayliUrun.brandname</p>
                                                </div>
                                                <div class="clear"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="rp-area">
                            <div class="all-p-title">
                                <h3>BENZER ÜRÜNLER</h3>
                            </div>
                            <div class="singl-shop ">
                                <div class="row">
                                </div>
                            </div>
                        </div>
                        <div class="rp-area">
                            <div class="all-p-title">
                                <h3>BUNADA BAKTILAR</h3>
                            </div>
                            <div class="singl-shop ">
                                <div class="row">

                                    @foreach (var item in Model.vw_bunabakanlar)
                                    {
                                        
                                        <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                                            <div class="sp-single">
                                                <div class="sp-img-area">
                                                    <img class="first-img" src="/Content/urunresimleri/@item.photopath" alt="" style="height:230px;" />
                                                    <img class="hover-img" src="/Content/urunresimleri/@item.photopath" alt="" style="height:230px;" />
                                                    <div class="quick-view-detail">
                                                        <a href="/Home/detaylar/@item.productID">Detaylar</a>
                                                    </div>
                                                    <div class="sp-label-pro sp-label-pro-hot" style="background-color:red;color:white;">GÖZAT</div>
                                                </div>
                                                <div class="sp-info-area">
                                                    <h2 class="product-name"><a title="@item.productname" href="/Home/detaylar/@item.productID">@item.productname </a></h2>
                                                    <p class="all-prices">
                                                        <span class="sp-price main-price">@item.price TL</span>
                                                    </p>
                                                    <div class="sp-button">
                                                        <div class="s-button">
                                                            <a href="/Home/Sepet/@item.productID" data-toggle="tooltip" data-placement="top" title="Sepete Ekle" class="black-tooltip add-to-cart all_src_icon"> <i class="fa fa-shopping-cart"></i> </a>
                                                        </div>
                                                        <div class="s-button">
                                                            <a href="" data-toggle="tooltip" data-placement="top" title="" class="black-tooltip add-to-cart all_src_icon"> <i class="fa fa-heart-o"></i> </a>
                                                        </div>
                                                        <div class="s-button last-b ">
                                                            <a href="/Home/detaylar/@item.productID" data-toggle="tooltip" data-placement="top" title="Detaylar" class="black-tooltip add-to-cart all_src_icon"> <i class="fa fa-eye"></i> </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

